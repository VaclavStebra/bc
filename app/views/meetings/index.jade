extends ../layout.jade

block content
    div(class='page-header')
        h1 Meetings
    if meetings.length == 0
        p You do not have any planned meetings
    else
        ul(class='list-group')
            each meeting in meetings
                li(class='list-group-item')
                    a(href='/meetings/' + meeting.id)= meeting.name
                    =' organized by '
                    strong= meeting.organizer.email
                    =' at '
                    strong= meeting.startDate
    a(href='/meetings/create', class='btn btn-default') Plan new meeting

